<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of Data User Games</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        padding: 20px;
      }

      h1 {
        margin-top: 0;
      }

      a {
        display: inline-block;
        margin-bottom: 10px;
        padding: 8px 16px;
        background-color: #4caf50;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      table th,
      table td {
        padding: 10px;
        text-align: left;
      }

      table th {
        background-color: #4caf50;
        color: #fff;
      }

      table td a {
        margin-right: 5px;
        color: #fff;
        text-decoration: none;
      }

      table td a:hover {
        text-decoration: underline;
      }

      table td a.delete {
        background-color: #f44336;
      }

      table td a.delete:hover {
        background-color: #e53935;
      }
    </style>
  </head>
  <body>
    <h1>List of Data User Games</h1>
    <a href="/user_games/create">Create Data</a>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Password</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < data.length; i++) { %>
        <tr>
          <td><%= data[i].id %></td>
          <td><%= data[i].username %></td>
          <td><%= data[i].password %></td>
          <td>
            <a href="/user_games/<%= data[i].id %>">Show</a>
            <a href="/user_games/<%= data[i].id %>/edit">Edit</a>
            <a
              onclick="return confirm('Are you sure?')"
              href="/user_games/<%= data[i].id %>/delete"
              class="delete"
              >Delete</a
            >
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
